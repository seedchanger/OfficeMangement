@{
    ViewData["Title"] = "Edit Student";
}
@model OfficeMangement.Models.Entities.StudentEntity

<!--dust particel-->
<div class="margin-body">
    <div>
        <div class="starsec"></div>
        <div class="starthird"></div>
        <div class="starfourth"></div>
        <div class="starfifth"></div>
    </div>
    <h1>Edit Student</h1>
    @if(Model is null)
    {
        <p style="color:aliceblue;">Student not found!!!</p>
    }
    @if (Model is not null)
    {
        <form method="post">
            <div class="container px-5 my-5">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card border-0 rounded-3 shadow-lg">
                            <div class="card-body p-4">
                                <div class="form-outline mb-4">
                                    <label class="form-label">Student Id</label>
                                    <input type="text" class="form-control" asp-for="Id" readonly />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" asp-for="Name" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" asp-for="Email" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Phone</label>
                                    <input type="text" class="form-control" asp-for="Phone" />
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Subscribed
                                    </label>
                                    <input id="isSubscribed" type="checkbox" class="form-check-input" asp-for="Subscribed" />
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>